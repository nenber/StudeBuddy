{% extends 'base.html.twig' %}

{% block title %}Mes évènements{% endblock %}

{% block body %}

    <div id="eventIndex">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="success">
                {{message}}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="danger">
                {{message}}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-12">
                <h1>Mes évènements rejoints</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
            {% if myEvents|length > 0 %}
                {% for event in myEvents %}
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h3>{{ event.name }}</h3>
                                <p><span class="gras">Organisateur :</span> {{ event.name }}</p>
                                <p><span class="gras">Description :</span> {{ event.description }}</p>
                                <p><span class="gras">Adresse :</span> {{ event.address }}</p>
                                <p><span class="gras">Date :</span> {{ event.date ? event.date|date('Y-m-d') : '' }}</p>
                                <br>
                                <div class="mt-2 text-right">
                                    {{ include('event/_leave_event_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                {% endfor %}
            {% else %}
                <p>Pas d'évènements rejoints</p>
                <button href="{{ path('event_map') }}">Rejoindre un évènement</button>
            {% endif %}
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <h1>Mes évènements créés</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {% set i = 0 %}
                {% for event in events %}
                    {% if app.user == event.organizerId %}
                        {% set i = i + 1 %}
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h3>{{ event.name }}</h3>
                                <p><span class="gras">Organisateur :</span> {{ event.name }}</p>
                                <p><span class="gras">Description :</span> {{ event.description }}</p>
                                <p><span class="gras">Adresse :</span> {{ event.address }}</p>
                                <p><span class="gras">Date :</span> {{ event.date ? event.date|date('Y-m-d') : '' }}</p>
                                <a href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>
                                <br>
                                <div class="mt-2 text-right">
                                    {{ include('event/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
                {% if i == 0 %}
                    <p>Pas d'évènements encore créés</p>
                    <button href="{{ path('event_new') }}">Créer un évènement</button>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
