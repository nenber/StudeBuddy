{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

<div class="">
    <h1>Administration</h1>

    <h3>Utilisateurs</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{% if not user.isBanned %}
                             <a href="{{ path('ban', { 'id': user.id }) }}">Bannir</a>
                         {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <h3>Utilisateurs reportés</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
                <th scope="col">Raison</th>
                <th scope="col">Voir conversation</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% if user.isReported %}
                    <tr>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.reportReason }} </td>
                        <td> TO BE ADDED </td>
                        <td><a href="{{ path('ban', { 'id': user.id }) }}">Bannir</a> <a href="{{ path('cancel_report', { 'id': user.id }) }}">Gracier</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
    <h3>Utilisateurs bannis</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
                <th scope="col">Raison</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% if user.isBanned %}
                    <tr>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.reportReason }} </td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
