<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<meta name="viewport" content="initial-scale=1, maximum-scale=1">
		 {% block stylesheets %}
		 {{ encore_entry_link_tags('app') }}
		 {% endblock %}
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">
{#		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">#}
	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
			<a class="navbar-brand" href="{{ path('app_index') }}">
				<img src="{{ asset('build/images/logo.png') }}" alt="logo studandbuddy" width="180px"/>
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" [ngClass]="{ show: navbarOpen }" id="navbarSupportedContent">
				<ul class="navbar-nav ml-auto">
					{% if is_granted('ROLE_USER') %}
						<li class="nav-item">
							<a class="nav-link" href="{{path('user_matching')}}">Matching</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" id="navbarDropdownn" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Mes évènements</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdownn">
								<a class="dropdown-item" href="{{ path('event_map') }}">Rejoindre un évènement</a>
								<a class="dropdown-item" href="{{ path('event_index') }}">Mes évènements</a>
								<a class="dropdown-item" href="{{ path('event_new') }}">Créer un évènement</a>
							</div>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#messagerie">Messagerie</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<img id="pi" src="{{ asset('build/images/profil.png') }}" alt="profil" width="35px" height="35px"/>
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
								<a class="dropdown-item" href="{{ path('user_edit-profile') }}">Voir mon profil</a>
								<a class="dropdown-item" href="{{ path('user_account') }}">Mes paramètres</a>
								<a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a>
							</div>
						</li>
					{% endif %}
					{% if not app.user %}
						<li class="nav-item">
							<a class="nav-link" href="#description">Qui sommes-nous ?</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Fonctionnalités</a>
						</li>
						<li class="nav-item">
							<a class="nav-link login" href="{{ path('app_login') }}">Se connecter</a>
						</li>
						<li class="nav-item ml-4 d-none d-lg-block">
							<button type="button" onclick="location.href='{{ path('app_register') }}';">
								S'inscrire
							</button>
						</li>
						<li class="nav-item d-lg-none d-xl-none">
							<button type="button" onclick="location.href='{{ path('app_register') }}';">
								S'inscrire
							</button>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>

		<div class="container-fluid"> {% block body %}{% endblock %}
			</div>
			<footer class="row mt-5">
				<div class="col my-4 mx-5">
					<div class="row py-3">
						<a href="#">
							<img src="{{ asset('build/images/logo_white.png') }}">
						</a>
					</div>
					<div class="row pt-3 ml-3">
						<a href="#">
							<p>Politique de confidentialité</p>
						</a>
					</div>
					<div class="row pt-3 ml-3">
						<a href="#">
							<p>Mentions légales</p>
						</a>
					</div>
				</div>
			</footer>

			{% block javascripts %}
					{{ encore_entry_script_tags('app') }}
			{% endblock %}

		</body>
	</html>
