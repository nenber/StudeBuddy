{% extends 'base.html.twig' %}

{% block title %}Choisi ton Buddy
{% endblock %}

{% block body %}
	<div id="register">
		<div class="row register mt-sm-5">
			<div class="col-lg-12 col-sm-12" data-aos="fade-right">
				<div class="row">
					<div class="col-lg-12">
						<h1>Choisis ton Buddy
							{{ app.user.firstname }}
							{{ app.user.lastname }}
							<hr></h1>
					</div>
					<div class="row">
						{% if warning == true %}
							<div class="alert alert-info alert-dismissible">
								<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
								<strong>Stop ! Contrôle d'identité !</strong>
								<p>
									Fillieul ?
									<small>Non...</small>
									Parrain ?
									<small>Non plus...</small>
									<br>
									Donc on ne peut pas te mettre en lien avec des Buddies.<br>
									Et en plus tu ne peux pas profité de l'intégralité du site.<br>
									Reviens après avoir modifié ton
									<a href="{{ path('user_edit-profile') }}" class="alert-link">
										profile</a>
								</p>

							</div>
						{% endif %}

						{% if sorry == true %}
							<div class="alert alert-warning alert-dismissible">
								<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
								<strong>Oups...</strong>
								<p>
									C'est un peu embarrassant mais y a personne qui correspond ton profil.<br>
									On t'invite modifier ton
									<a href="{{ path('user_edit-profile') }}" class="alert-link">
										profile</a>
									soit en changeant ton role ou bien en ajoutant des langues d'apprentissage.
								</p>
							</div>
						{% endif %}

						<ul>
							{% for item in buddies %}
								<li>{{ item.spokenLanguage|json_encode(constant('JSON_PRETTY_PRINT')) }}
									{{ item.languageToLearn|json_encode(constant('JSON_PRETTY_PRINT')) }}
									{{ item.firstname|json_encode(constant('JSON_PRETTY_PRINT')) }}
									{{ item.lastname|json_encode(constant('JSON_PRETTY_PRINT')) }}
									{{ item.description|json_encode(constant('JSON_PRETTY_PRINT')) }}</li>
							{% endfor %}
						</ul>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
