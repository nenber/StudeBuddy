{% extends 'base.html.twig' %}

{% block title %}Conversations de {{ app.user.firstname }}
{% endblock %}

{% block body %}
    <div class="container-fluid h-100" id="messenger">
        <div class="row justify-content-center h-100">
            <div class="col-md-4 col-xl-3 chat"><div class="card mb-sm-3 mb-md-0 contacts_card">
                    <div class="card-body contacts_body">
                        <ul class="contacts">
                            <li class="active">
                                <div class="d-flex bd-highlight">
                                    <div class="img_cont">
                                        <img src="https://pbs.twimg.com/media/ESKbGR3UEAAL_YU.png" class="rounded-circle user_img">
                                    </div>
                                    <div class="user_info">
                                        <span>Buddy Name4</span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="d-flex bd-highlight">
                                    <div class="img_cont">
                                        <img src="https://pbs.twimg.com/media/Dny0Gq9XUAEhf04.jpg" class="rounded-circle user_img">
                                        <span class="online_icon offline"></span>
                                    </div>
                                    <div class="user_info">
                                        <span>Natte Hally</span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer"></div>
                </div></div>
            <div class="col-md-8 col-xl-6 chat">
                <div class="card">
                    <div class="card-header msg_head">
                        <div class="d-flex bd-highlight">
                            <div class="img_cont">
                                <img src="https://pbs.twimg.com/media/ESKbGR3UEAAL_YU.png" class="rounded-circle user_img">
                            </div>
                            <div class="user_info">
                                <span>Buddy name4</span>
                            </div>

                        </div>
                        <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
                        <div class="action_menu">
                            <ul>
                                <li><i class="fas fa-user-circle"></i> Voir le profil</li>
                                <li><i class="fas fa-users"></i> Devenir son parrain</li>
                                <li><i class="fas fa-plus"></i> Ajouter au groupe</li>
                                <li><i class="fas fa-ban"></i> Signaler</li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body msg_card_body">
                        <div class="d-flex justify-content-start mb-4">
                            <div class="img_cont_msg">
                                <img src="https://pbs.twimg.com/media/ESKbGR3UEAAL_YU.png" class="rounded-circle user_img_msg">
                            </div>
                            <div class="msg_container">
                                Hello, it's me
                                I was wondering if after all these years you'd like to meet
                                To go over everything
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mb-4">
                            <div class="msg_container_send">
                                Vic à tord et Nata lit le dernier
                                numéro du Picsou magasine,
                                avec Mickey et ses amis
                            </div>
                            <div class="img_cont_msg">
                                <img src="https://pbs.twimg.com/media/Dny0Gq9XUAEhf04.jpg" class="rounded-circle user_img_msg">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="input-group">
                            <div class="input-group-append">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                </svg>
                            </div>
                            <textarea name="" class="form-control type_msg" placeholder="Votre message ici..."></textarea>
                            <div class="input-group-append">
                                <span class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}