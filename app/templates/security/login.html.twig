{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}

	<div id="login">
		<div class="row">
			<div class="col-lg-7 col-sm-12">
				<div class="contenu" data-aos="fade-right" data-aos-offset="400">
					<h1>Connexion
						<hr></h1>
					<form method="post" class="mt-5">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                            </div>
                        {% endif %}
						<div class="form-group row">
							<div class="col-lg-7">
								<label for="exampleInputEmail1">Adresse-email :</label>
								{# <input type="email" class="form-control mt-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="toi@buddy.fr"> #}
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" aria-describedby="emailHelp" placeholder="toi@buddy.fr" required autofocus>
                            </div>
						</div>
						<div class="form-group row mt-5">
							<div class="col-lg-7">
								<label for="exampleInputPassword1">Mot de passe :</label>
								{# <input type="password" class="form-control mt-2" id="exampleInputPassword1" placeholder="Mot de passe"> #}
                                <input type="password" name="password" id="inputPassword" class="form-control mt-2" placeholder="Mot de passe" required>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                            </div>
						</div>
						<p>
							<a href="{{ path('user_forget-password') }}">Mot de passe oublié ?</a>
						</p>
						<button type="submit" class="btn-lg">Se connecter</button>
					</form>

					<p class="mt-3 d-block d-sm-block d-md-none">
						<a href="{{ path('app_register') }}">Pas encore de compte ?</a>
					</p>

				</div>
			</div>
			<div class="col-lg-5 block-blue d-none d-lg-block d-xl-block">
				<div class="row">
					<div class="col-xl-12">
						<p>
							<a href="{{ path('app_register') }}">Pas encore de compte ?</a>
						</p>
					</div>
				</div>
				<img src="{{ asset('/img/8576.png') }}" alt="logo studandbuddy" width="180px"/>
			</div>
		</div>
	{% endblock %}
