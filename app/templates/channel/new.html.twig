{% extends 'base.html.twig' %}

{% block title %}New Channel{% endblock %}

{% block body %}
    <h1>Create new Channel</h1>
    <div class="container mt-5">
    <div class="col-md-4">
        {{ form_start(form) }}
        {{ form_label(form.name, "Nom du Channel :") }}
        {{ form_widget(form.name, {
            'attr': {'placeholder': "Nom du Channel", 'class' : 'form-control'}
        }) }}
        {{ form_errors(form.get_participant) }}
        {{ form_label(form.get_participant, "Nom du participant :") }}
        {{ form_widget(form.get_participant, {
            'attr': {'placeholder': "Nom du participant", 'class' : 'form-control'}
        }) }}
        {{ form_errors(form.get_participant) }}
        <button class="btn-lg">Valider</button>
        {{ form_end(form) }}
        {{ dump(app.user.firstname) }}
    </div>

    </div>
{% endblock %}